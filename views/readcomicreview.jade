extends layout

block content
	.body
		.col-sm-10
			h1.title.inline.slide-right
				= "Reviews for " + comicname
			ul.slide-right
				each comic in review
					div
						label.control-label.underline
							= "Reviewer:" + " "
						span #{comic.poster}
						br
						span 
							each star in [1,2,3,4,5,6,7]
								if (star <= comic.rating)
									span &#9733
								else
									span &#9734
						br
						span.word-wrap #{comic.comment}
						br
						span posted on:
							| #{comic.date}
						if (authLevel < 2) 
							button.btn.btn-default.col-sm-offset-10(type="submit", name= "comicname", value= comicname) Delete Post
					br