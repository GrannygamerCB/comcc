extends layout

block content
	.body
		.row
			.col-sm-6
				h1.title Login
			div.shaded-box.col-sm-4
				.col-sm-7
					h3#not-member Not a Member?
				.col-sm-2
					a.btn.btn-default.center(href="/signup", role="button") Sign Up
		form#login.form-horizontal(role="form", action="/users/login", method="post")
		
		
			if emailnotempty
				if userexists
					#email-form.form-group
						label.control-label.col-sm-2(for="email") Email:
						.col-sm-9
							input#email.form-control(type="email", placeholder="Enter Email", name="email")
				else
					#email-form.form-group.has-error
						label.control-label.col-sm-2(for="email") Email:
						.col-sm-9
							label.control-label(for="email") Email not linked to a user account
							input#email.form-control(type="email", placeholder="Enter Email", name="email")
			else
				#email-form.form-group.has-error
					label.control-label.col-sm-2(for="email") Email:
					.col-sm-9
						label.control-label(for="email") Email is empty
						input#email.form-control(type="email", placeholder="Enter Email", name="email")
	
			if (matching && passnotempty)
				.form-group
					label.control-label.col-sm-2(for="pwd") Password:
					.col-sm-9
						input#pwd.form-control(type="password", placeholder="Enter Password", name="password")
			else
				if !matching
					.form-group.has-error
						label#confirm-pass.control-label.col-sm-2(for="pwd") Password:
						.col-sm-9
							label.control-label(for="pwd") Password Incorrect
							input#pwd.form-control(type="password", placeholder="Enter Password", name="password")
				else if !passnotempty
					.form-group.has-error
						label#confirm-pass.control-label.col-sm-2(for="pwd") Password:
						.col-sm-9
							label.control-label(for="pwd") Password is empty
							input#pwd.form-control(type="password", placeholder="Enter Password", name="password")
			button.btn.btn-default.loginbutton.col-sm-offset-10(type="submit") Log In
			div.facebookbutton.col-sm-offset-10.margined
				a.btn.btn-block.btn-social.btn-facebook(href="/users/login/facebook") Login with Facebook
					i(class='fa fa-facebook')