extends layout

block content
    .body
        div(class="container")
            form(class="form-horizontal", role="form", method="post", action="/addcomic/addedcomic")
                input(name="login", type="hidden", value=login)
                div(class="form-group")
                    label(class="control-label col-sm-2", for="comicname") Comic Name:
                    div(class="col-sm-10")
                        input(type="email", class="form-control", name="comicname", placeholder="Enter name")
                
                div(class="form-group")
                    label(class="control-label col-sm-2", for="comicdescription") Comic Description:
                    div(class="col-sm-10")
                        input(type="email", class="form-control", name="comicdescription", placeholder="Enter description")
                        
                div(class="form-group")
                    div(class="col-sm-offset-2 col-sm-10")
                        input(type="submit", class="btn btn-default", method="post", action="/addcomic/addedcomic", value="Submit")