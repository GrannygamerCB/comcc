extends layout

block content
	.body
		.col-sm-6
			h1.title.inline.slide-right
				= "Edit Profile"
			form.slide-right(method="post", action="/profile/upload", enctype="multipart/form-data")
				input(type="hidden", name="email", value=email, readonly=true)
				label.control-label Change Profile Picture
				br
				br
				input(type="file", name="profilePic")
				br
				input.btn.btn-default.col-sm-offset-10(type="submit")
				br
				br
			form.slide-right(name="editProfile", action="/profile/updateprofile", method="post")
				label.control-label Email: 
				input.form-control(type="text", name="email", readonly=true, value=email)
				br
				label.control-label Display Name: 
				input.form-control(type="text", name="displayName")
				br
				label.control-label Description: 
				input.form-control(type="text", name="description")
				br
				div.row
					label.control-label.col-sm-3 Update your favourite genres:
				div.row
					.col-sm-2
					label.control-label.col-sm-2.checkbox-inline(type="checkbox") 
						input(type="checkbox", name="genre[]", value="adventure")
						| Adventure
					label.control-label.col-sm-2.checkbox-inline(type="checkbox")
						input(type="checkbox", name="genre[]", value="action") 
						| Action
					label.control-label.col-sm-2.checkbox-inline(type="checkbox")
						input(type="checkbox", name="genre[]", value="comedy") 
						| Comedy
				div.row
					.col-sm-2
					label.control-label.col-sm-2.checkbox-inline(type="checkbox") 
						input(type="checkbox", name="genre[]", value="crime")
						| Crime
					label.control-label.col-sm-2.checkbox-inline(type="checkbox")
						input(type="checkbox", name="genre[]", value="drama") 
						| Drama
					label.control-label.col-sm-2.checkbox-inline(type="checkbox")
						input(type="checkbox", name="genre[]", value="fantasy") 
						| Fantasy
				div.row
					.col-sm-2
					label.control-label.col-sm-2.checkbox-inline(type="checkbox") 
						input(type="checkbox", name="genre[]", value="horror")
						| Horror
					label.control-label.col-sm-2.checkbox-inline(type="checkbox")
						input(type="checkbox", name="genre[]", value="mystery") 
						| Mystery
					label.control-label.col-sm-2.checkbox-inline(type="checkbox")
						input(type="checkbox", name="genre[]", value="nonfiction") 
						| Non-Fiction
				div.row
					.col-sm-2
					label.control-label.col-sm-2.checkbox-inline(type="checkbox") 
						input(type="checkbox", name="genre[]", value="romance")
						| Romance
					label.control-label.col-sm-2.checkbox-inline(type="checkbox")
						input(type="checkbox", name="genre[]", value="scifi") 
						| Sci-Fi
					label.control-label.col-sm-2.checkbox-inline(type="checkbox")
						input(type="checkbox", name="genre[]", value="psychological") 
						| Psychological
				br
				input.btn.btn-default.col-sm-4(type="submit" value="Update")
				button.btn.btn-default.col-sm-4(onclick="window.history.back()", style="float: right") Back
				br
				br
				br
			form.slide-right(name="changePassword", action="/profile/updatepwd", method="post")
				input(type="hidden", name="email", value=email, readonly=true)
				label.control-label Old Password:
				input.form-control.inline(type="text", name="password")
				if (!passnotempty)
					span Password field is empty
				else if (wrongpassword)
					span Incorrect password
				br
				label.control-label New Password:
				input.form-control(type="text", name="newPassword")
				br
				label.control-label Confirm Password:
				input.form-control(type="text", name="confirmPassword")
				if (!newpasswordnotempty)
					span Enter new password
				else if (!matching)
					span Passwords do not match
				br
				input.btn.btn-default.col-sm-4(type="submit" value="Update")
				button.btn.btn-default.col-sm-4(onclick="window.history.back()", style="float: right") Back
				br
				br