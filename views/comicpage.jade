extends layout

block content
    .body.center
        .col-sm-9
            h1.title.inline.slide-right 
                = " " + comicname
                br
                span 
                    each star in [1,2,3,4,5,6,7]
                        if (star <= rating)
                            span &#9733
                        else
                            span &#9734
        .col-sm-9
            div.slide-right
                div.float-left.sol-sm-3
                    img(src='/images/comicPics/' + coverimage, height="80")
                form(class="form-horizontal", action="/comicpage/upload", method="post", enctype="multipart/form-data")
                    input(name="login", type="hidden", value=login)
                    div(class="form-group")
                        label(class="control-label col-sm-2", for="comiccover") Select an image to upload:
                        div(class="col-sm-10")
                            input(type="file", name="comiccover") 
                            br
                            input(type="submit", value="Upload Image")
        .col-sm-9
            div.slide-right
                p
                    | Author:
                    = " " + authorname
                P
                    | Genre:
                    = " " + genre
                p
                    | Description:
                    = " " + description

        .col-sm-9
            br
            div.slide-right
                h4 Reviews
                form(name="readReview", action="/readComicReview", method="post")
                    button.btn.btn-default.col-sm-2(type="submit", name="email", value= email)
                        = "Read Review"
                form(name="writeReview", action="/writeComicReview", method="post")
                    button.btn.btn-default.col-sm-2(type="submit", name="email", value= email)
                        = "Write Review"

        .col-sm-9
            br
            div.slide-right

                form(name="findComic", action="/rentals/findComic", method="post")
                    input(name="comicowner", type="hidden", value=username)
                    button.btn.btn-default.col-sm-2(type="submit", name="comicname", value= comicname)
                        = "Find this Comic"
                br
                br
                
                form(name="editRental", action="/rentals/editRental", method="get")
                    button.btn.btn-default.col-sm-2(type="submit", name="comicid", value=comicid)
                        = "Update Rental Status"

