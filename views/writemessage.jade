extends layout

block content
	.body
		.col-sm-10.col-sm-offset-1
			h1.title.slide-right
				= "Send Message"
			form(name="writeMessage", action="/message/writeMessage/write", method="post")
				label.control-label User: 
				input.form-control(type="text", name="user", value= email)
				br
				input.form-control(type="text", name="subject", value= subject)
				br
				label.control-label Message:
				br 
				textarea.textbox-size(name="message") #{message}
				br
				br
				input.btn.btn-default.col-sm-offset-10(type="submit" value="Submit")
				p
					msg.subject